# ======================
# App
# ======================
APP_NAME=Document Management System
APP_ENV=development
APP_PORT=3000

# ======================
# PostgreSQL
# ======================
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your_password_here
PGDATABASE=docsystem
PGSSL=false

# ======================
# File Storage
# ======================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# ======================
# Auth / Security
# ======================
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1d

# ======================
# Logging
# ======================
LOG_LEVEL=info
